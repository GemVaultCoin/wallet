<div class="modal fade" id="profileModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="editProfile('Close')">&times;</button>
                <h4 class="modal-title usde">User Details</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <h3 class="m-t-none m-b perinfo">Personal Info</h3>
                    <form method="POST" enctype="multipart/form-data" id='userEditForm' name='userEditForm'>
                        <div class="form-group">
                            <label class="nam">Name</label>
                            <div class="input-group" id="name-div">
                                <div class="col-lg-2 f1 form-control fetchText" id="current-name"><%= profileName %></div>
                                <span class="input-group-btn">
                                         <button class="btn btn-primary" id="editName" type="button" onclick="editProfile('Name')"><i class="fa fa-pencil-square-o fa-x" aria-hidden="true"></i></button>
                                    </span>
                            </div>
                            <input type="text" placeholder="Enter New Name" class="form-control" id="new-name-input" style="display:none;">
                        </div>
                        <div class="form-group">
                            <label class="emai">Email</label>
                            <div class="input-group" id="email-div">
                                <div class="col-lg-2 f1 form-control fetchText" id="current-email"><%= userEmail %></div>
                                <span class="input-group-btn">
                                             <button class="btn btn-primary" id="editEmail" type="button" onclick="editProfile('Email')"><i class="fa fa-pencil-square-o fa-x" aria-hidden="true"></i></button>
                                        </span>
                            </div>
                            <input type="email" placeholder="Enter New Email Address" class="form-control" id="new-email-input" style="display:none;">
                        </div>
                        <div class="form-group">
                            <label class="passw">Password</label>
                            <div class="input-group" id="password-div">
                                <div class="col-lg-2 f1 form-control fetchText">**********</div>
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" id="editPassword" type="button" onclick="editProfile('Password')"><i class="fa fa-pencil-square-o fa-x" aria-hidden="true"></i></button>
                                </span>
                            </div>
                            <input type="password" placeholder="Enter New Password" class="form-control" id="new-password-input"style="display:none;">
                        </div>
                        <div class="form-group">
                            <input type="password" placeholder="Confirm New Password" class="form-control" 
                            id="new-conf-password-input" style="display:none;">
                        </div>
                        <div class="text-center m-t-lg">
                            <button class="btn btn-sm btn-primary m-t-n-xs" id='saveProfileChanges' type="button" onclick="editProfile('Save')" disabled><strong class="sachbtn">Save Changes</strong></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>